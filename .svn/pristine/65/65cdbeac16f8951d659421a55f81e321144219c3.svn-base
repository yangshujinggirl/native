@import '../../../.././utils/scss/public.scss';//引入公共scss
.swiper-container {
	width: 100%;
	height: (300rem/$num);
	overflow: hidden;
	position: relative;
	.swiper-wrapper {
		width: 100%;
		height: 100%;
		z-index: 1;
		display: -webkit-box;
		.swiper-slide{
			text-align: center;
			background: #fff;
			width: 90%;
			height: 100%;
			display: -webkit-box;
			display: -ms-flexbox;
			display: -webkit-flex;
			display: flex;
			-webkit-box-pack: center;
			-ms-flex-pack: center;
			-webkit-justify-content: center;
			justify-content: center;
			-webkit-box-align: center;
			-ms-flex-align: center;
			-webkit-align-items: center;
			align-items: center;
			a {
				width: 100%;
				display: block;
				height: 100%;
			}
		}
		.swiper-slide img{
			width: 100%;
			height: 100%;
		}
	}
	.swiper-pagination{
		position: absolute;
		bottom: .5rem;
		width: 100%;
		text-align: center;
		.swiper-pagination-bullet {
		  width: .5rem;
		  height: .5rem;
		  display: inline-block;
		  border-radius: 100%;
		  background-color: #fff;
		  margin: 0 .3rem;
		}
		.swiper-pagination-bullet-active {
		  background-color: #d956ee;
		}
	}
}
