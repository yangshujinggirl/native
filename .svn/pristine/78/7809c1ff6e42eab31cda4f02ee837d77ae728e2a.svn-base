@import '../../../.././utils/scss/public.scss';//引入公共scss
.wrap-input{
  position: relative;
  .input{
    width: 100%;
    height: (103rem/$num);
    margin-top:(25rem/$num);
    font-size: (28rem/$num);
    color: $color-gray2;
    text-indent: (40rem/$num);
    border-top: 1px solid $color-gray4;
    border-bottom: 1px solid $color-gray4;
    background-color: $color-white;
  }
  .icon-type{
    position: absolute;
    top: (60rem/$num);
    right: (20rem/$num);
  }
  .input1{
    margin-top:0;
    border-top: 0;
  }
}
.safe{
    color: $color-gray2;
    font-size: (24rem/$num);
    text-align: center;
    margin-top: (20rem/$num);
  }
  .accept{
    font-size: (24rem/$num);
    text-align: center;
    margin: (35rem/$num) auto 0;
    a{
      color: $color-blue;
    }
  }
  .button{  
    margin-top: (50rem/$num);
  }
