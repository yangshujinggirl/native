@import '../../../.././utils/scss/public.scss';//引入公共scss
.user-register{
  width: 100%;
  height: 100%;
  display:table;
  overflow:hidden;
  position: relative;

  .wrap-register{
    padding: 0 (40rem/$num);
    background-color: $color-white;
    border-bottom: 1px solid $color-gray4;
    border-top: 1px solid $color-gray4;
  }
  .wrap-input{
    .input{
      width: (460rem/$num);
      height: (100rem/$num);
      font-size: (28rem/$num);
      color: $color-gray2;
      text-indent: (20rem/$num);
      margin-left: .4rem;
      border-bottom: 1px solid $color-gray4;
    }
    .input-psd{
      width: (420rem/$num);
    }
    .input1{
      border-bottom: 0;
    }
    .code-input{
      width: (260rem/$num);
    }
    .verificationcode{
      width: (175rem/$num);
      height: (70rem/$num);
      color: $color-orange;
      font-size: (28rem/$num);
      border-left: 1px solid  $color-gray4;
      margin-left: (20rem/$num);
      &.disabled{
        color: $color-gray2;
      }
    }
    .img-code{
        width: (150rem/$num);
        height: (66rem/$num);
        margin: 0 0 (20rem/$num) (40rem/$num);
    }
    .icon-type{
      display: inline-block;
      position: relative;
      top: -.8rem;
     }
     .icon-type-eye{
      margin-right: (10rem/$num);
     }
  }
  .button1{ 
    border: (1rem/$num) solid  $color-orange;
    color: $color-orange;
  }
  .button2{
      background-color: $color-orange;
      color: $color-white;
      margin-left: (15rem/$num);
  }
  .alert-content{
    margin-left: (25rem/$num);
    margin-top: (25rem/$num);
    font-size: (24rem/$num);
    text-align: left;
    .alert-tip{
      color: $color-orange;
    }
  }
  .button-register{
    margin-top:(40rem/$num); 
  }
}
