@import '../../../.././utils/scss/public.scss';//引入公共scss
.user-register{
  width: 100%;
  height: 100%;
  display:table;
  overflow:hidden;
  position: relative;
  .wrap-register{
    padding: 0 (40rem/$num);
    background-color: $color-white;
    border-bottom: 1px solid $color-gray4;
    border-top: 1px solid $color-gray4;
    margin-top: (40rem/$num);
  }
  .wrap-input{
    .input{
      width: (460rem/$num);
      height: (100rem/$num);
      font-size: (28rem/$num);
      color: $color-gray2;
      text-indent: (20rem/$num);
      margin-left: .4rem;
      border-bottom: 1px solid $color-gray4;
    }
    .input-psd{
      width: (420rem/$num);
    }
    .icon-type{
      display: inline-block;
      position: relative;
      top: -.8rem;
     }
     .icon-type-eye{
      margin-right: (10rem/$num);
     }
  }
  .button-register{
    margin-top:(40rem/$num); 
  }
}
