@import '../../../.././utils/scss/public.scss';//引入公共scss
.wrap-share-icon {
  display: none;
}
.home-content {
  font-size: (24rem/$num);
  color: $color-gray1;
  img {
    width: 100%;
  }
  .platform-content {
    margin-top: (90rem/$num);
    position: relative;
    .main-content {
      width: 93%;
      position: absolute;
      top: (264rem/$num);
      left: 50%;
      transform: translateX(-50%);
      -webkit-transform: translateX(-50%);
      background-color: #fff;
    }
    .main-wrap {
      padding:0 (24rem/$num);
      .top-part {
        padding: (20rem/$num) 0;
        display: flex;
        display: -ms-flex;      /* TWEENER - IE 10 */
        display: -webkit-flex;
        text-align: center;
        align-items: baseline;
        -webkit-align-items: baseline;
        -moz-align-items: baseline;
        -ms-align-items: baseline;
        -o-align-items: baseline;
        border-bottom:1px solid $color-gray4;
        .item-top {
          flex: 1;
          -webkit-flex: 1;          /* Chrome */
          -ms-flex: 1;
          .icon-type {
            width: (80rem/$num);
            margin-bottom: (16rem/$num);
          }
        }
      }
      .bottom-part {
        padding: (20rem/$num) 0;
        display: flex;
        display: -ms-flex;      /* TWEENER - IE 10 */
        display: -webkit-flex;
        text-align: center;
        .item-bottom {
          flex: 1;
          -webkit-flex: 1;          /* Chrome */
          -ms-flex: 1;
          color: $color-gray2;
          .value {
            font-size: (34rem/$num);
            margin-bottom: (6rem/$num);
            color: $color-gray1;
          }
        }
      }
    }
  }
  .financing-content {
    .top-part {
      background-color: $color-white;
      padding:(20rem/$num) (30rem/$num);
      display: flex;
      display: -ms-flex;      /* TWEENER - IE 10 */
      display: -webkit-flex;
      align-items: center;
      -webkit-align-items: center;
      -moz-align-items: center;
      -ms-align-items: center;
      -o-align-items: center;
      -webkit-justify-content: center;
      -moz-justify-content: center;
      -ms-justify-content: center;
      -o-justify-content: center;
      justify-content: center;
      border-bottom: 1px solid $color-gray4;
      .item-head {
        font-size: (36rem/$num);
        flex: 1;
        -webkit-flex: 1;          /* Chrome */
        -ms-flex: 1;
        &:last-child {
          text-align: right;
        }
      }
      .more,.arrow {
        font-size: (28rem/$num);
        color: $color-gray2;
        display: inline-block;
        vertical-align: middle;
      }
      .arrow {
        width: (16rem/$num);
        height: (30rem/$num);
        background: url(../../../image/icon/new_h5/arrow.png);
        background-size: cover;
        margin-left: (10rem/$num);
      }
    }
    .bottom-part {
      padding:(40rem/$num) (30rem/$num);
      background-color: $color-white;
      border-bottom: 1px solid $color-gray4;
      .title {
        font-size: (32rem/$num);
        margin-bottom: (24rem/$num);
      }
      .info-list {
        .item-info {
          display: inline-block;
          vertical-align: bottom;
          &:not(:last-child) {
            margin-right:(90rem/$num);
          }
        }
        .value {
          line-height: 100%;
          height: (32rem/$num);
          padding-top: (26rem/$num);
          font-size: (32rem/$num);
          margin-bottom: (12rem/$num);
        }
        .tb {
          line-height: 100%;
          color: $color-gray2;
        }
        .value-accrual {
          color: $color-orange;
          margin-bottom: (12rem/$num);
          height:  (58rem/$num);
          font-size: (58rem/$num);
          line-height: 100%;
          margin-right: (26rem/$num);
          position: relative;
          .unit {
            font-size: (24rem/$num);
            line-height: 100%;
            position: absolute;
            left:(70rem/$num);
            bottom:0;
          }
        }
      }
    }
  }
  .activity-content {
    padding-bottom: (124rem/$num);
    .top-part {
      background-color: $color-white;
      padding:(64rem/$num) (30rem/$num) (32rem/$num);
      display: flex;
      display: -ms-flex;      /* TWEENER - IE 10 */
      display: -webkit-flex;
      align-items: center;
      -webkit-align-items: center;
      -moz-align-items: center;
      -ms-align-items: center;
      -o-align-items: center;
      -webkit-justify-content: center;
      -moz-justify-content: center;
      -ms-justify-content: center;
      -o-justify-content: center;
      justify-content: center;
      .item-head {
        font-size: (36rem/$num);
        flex: 1;
        -webkit-flex: 1;          /* Chrome */
        -ms-flex: 1;
        &:last-child {
          text-align: right;
        }
      }
      .more,.arrow {
        font-size: (28rem/$num);
        color: $color-gray2;
        display: inline-block;
        vertical-align: middle;
      }
      .arrow {
        width: (16rem/$num);
        height: (30rem/$num);
        background: url(../../../image/icon/new_h5/arrow.png);
        background-size: cover;
        margin-left: (10rem/$num);
      }
    }
  }
}
