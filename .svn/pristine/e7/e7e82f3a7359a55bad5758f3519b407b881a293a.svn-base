@import '../../../.././utils/scss/public.scss'; //引入公共scss
.Container {
    .top {
        width: 100%;
        color: $color-white2;
        // background: url(../../../image/productDetail/bg.jpg);
        // background-size: cover;
        background: #ff6600;
        background: linear-gradient(to right, #ff9a00,50%, #ff6600);
        background: -webkit-linear-gradient(left, #ff9a00,50%, #ff6600);
        background: -moz-linear-gradient(left center, #ff9a00, #ff6600);
        background: -webkit-gradient(linear, left center, right center,from(#ff9a00), to(#ff6600));
        background: -o-linear-gradient(left,#ff9a00, #ff6600);
        background: -ms-linear-gradient(left,#ff9a00, #ff6600);
        padding: (40rem/$num) 0 0;
        .fr {
            -moz-box-flex: 1;
            -webkit-box-flex: 1;
            line-height: 100%;
            .bigfield {
                color: #fff;
                font-size: (76rem/$num);
                line-height: 100%;
                .unit {
                    font-style: normal;
                    font-size: (24rem/$num);
                    vertical-align: baseline;
                }
                .tNum {
                    vertical-align: baseline;
                }
            }
            .field {
                display: block;
                color: #fff;
                font-size: (26rem/$num);
                padding-bottom: (12rem/$num);
                .unit {
                    font-style: normal;
                    font-size: (24rem/$num);
                    vertical-align: baseline;
                }
                .tNum {
                    vertical-align: baseline;
                }
            }
        }
        .productHead {
            padding: 0 (60rem/$num);
            margin: 0 auto (72rem/$num);
            .head {
                width: 100%;
                font-size: (24rem/$num);
                text-align: center;
                position: relative;
                &:before,
                &:after {
                    content: '';
                    width: (60rem/$num);
                    height: 1px;
                    background-color: #fff;
                    position: absolute;
                    top: 50%;
                }
                &:before {
                    left: 0;
                }
                &:after {
                    right: 0;
                }
            }
            .prop {
                display: -webkit-box;
                display: box;
                padding-top: (48rem/$num);
                font-size: (24rem/$num);
                .field {
                    font-weight: bold;
                }
                .two {
                    text-align: right;
                }
            }
        }
        .money {
            display: -webkit-box;
            display: box;
            font-size: (24rem/$num);
            text-align: center;
            background-color: rgba(0, 0, 0, .2);
            background-size: cover;
            padding: (20rem/$num) 0;
            position: relative;
            .process {
                height: (2rem/$num);
                background-color: $color-white;
                position: absolute;
                left: 0;
                top: 0;
                &:after {
                    content: '';
                    display: block;
                    width: (8rem/$num);
                    height: (8rem/$num);
                    border-radius: 100%;
                    background-color: $color-white;
                    position: absolute;
                    right: 0;
                    top: 50%;
                    transform: translateY(-50%);
                    -webkit-transform: translateY(-50%);
                }
            }
            .processText {
                position:absolute;
                top:-1rem;
                left: (80rem/$num);
                color: #fff;
            }
        }
    }
    .goBack {
        display: -webkit-box;
        display: box;
        font-size: (24rem/$num);
        text-align: center;
        padding: (10rem/$num) 0;
        background-color: #FFF;
        color: $color-gray2;
        border-bottom: 1px solid $color-gray4;
        margin-bottom: (30rem/$num);
        .child {
            -moz-box-flex: 1;
            -webkit-box-flex: 1;
            padding: (22rem/$num) 0;
        }
        .one {
            border-right: 1px solid $color-gray4;
        }
    }
    .project {
        font-size: (24rem/$num);
        color: $color-gray2;
        padding: 0 (30rem/$num) (30rem/$num);
        background-color: #FFF;
        margin-bottom: (30rem/$num);
        position: relative;
        .describe {
            padding: (30rem/$num) 0 (30rem/$num) (50rem/$num);
            font-size: (30rem/$num);
            color: $color-black;
            position: relative;
            border-bottom: 1px solid $color-gray4;
            &:before {
                content: '';
                display: block;
                width: (33rem/$num);
                height: (33rem/$num);
                background: url(../../../image/icon/icon_product1.png) left center no-repeat;
                background-size: contain;
                position: absolute;
                left: 0;
                top: 50%;
                transform: translateY(-50%);
                -webkit-transform: translateY(-50%);
            }
        }
        .text {
            padding-top: (20rem/$num);
            line-height: (40rem/$num);
        }
        .knowlist {
            margin-top: (40rem/$num);
            .high {
                color: $color-orange;
            }
        }
        .sonList {
            display: -webkit-box;
            display: box;
            text-align: center;
            .son {
                padding-top: (30rem/$num);
                -moz-box-flex: 1;
                -webkit-box-flex: 1;
                .icon {
                    width: (100rem/$num);
                    height: (100rem/$num);
                }
                .t1 {
                    width: (125rem/$num);
                    font-size: (22rem/$num);
                    margin: 0 auto;
                }
            }
        }
        .record {
            width: (50rem/$num);
            height: (50rem/$num);
            position: absolute;
            right: 5%;
            top: 50%;
            margin-top: (-25rem/$num);
            .arrow {
                display: block;
                width: (20rem/$num);
                height: (20rem/$num);
                border-top: 1px solid $color-gray4;
                border-right: 1px solid $color-gray4;
                transform: rotate(455deg);
                -webkit-transform: rotate(45deg);
                position: absolute;
                right: 50%;
                top: 50%;
                margin-top: (-10rem/$num);
                margin-right: (-10rem/$num);
            }
        }
    }
    .step1 {
        .describe {
            &:before {
                background: url(../../../image/icon/icon_product2.png) left center no-repeat;
                background-size: contain;
            }
        }
    }
    .step4 {
        padding-bottom: 0;
        .describe {
            border: none;
            &:before {
                background: url(../../../image/icon/icon_product3.png) left center no-repeat;
                background-size: contain;
            }
        }
    }
    .accept{
        margin-bottom: (30rem/$num);
    }
    .buy {
        padding: (30rem/$num);
        background-color: #FFF;
        .wrap-input {
        	width: 8rem;
            display: inline-block;
            font-size: (28rem/$num);
            margin-right: (20rem/$num);
            .input{
            	width: 7rem;
                height: 2.5rem;
            }
        }

        .parent {
            display: inline-block;
            .sure {
                width: (228rem/$num);
                margin: 0;
            }
        }
    }
    // .accept{
    //     text-align: center;
    //     font-size: (24rem/$num);
    //     position: relative;
    //     .agree{
    //         margin-left: (10rem/$num);
    //         vertical-align: middle;
    //     }
    //     .protocol{
    //         color: $color-blue;
    //         vertical-align: middle;
    //     }
    // }
}
